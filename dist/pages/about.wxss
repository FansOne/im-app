@import "./../components/registerPopup.wxss";
@import "./../components/releaseItem.wxss";
.aboutUserMsgBox {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.aboutUserMsgBox .aboutUserMsgTop {
  position: relative;
  width: 100%;
  height: 450rpx;
}
.aboutUserMsgBox .aboutUserMsgTop .aboutUserMsgUserCover {
  width: 100%;
  padding: 115rpx 30rpx 58rpx 30rpx;
  display: flex;
  align-items: center;
}
.aboutUserMsgBox .aboutUserMsgTop .aboutUserMsgUserCover image {
  width: 128rpx;
  height: 128rpx;
}
.aboutUserMsgBox .aboutUserMsgTop .aboutUserMsgUserCover .aboutUserCoverRight {
  height: 128rpx;
  flex: 1;
  padding: 8rpx 0 15rpx 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.aboutUserMsgBox .aboutUserMsgTop .aboutUserMsgUserCover .aboutUserCoverRight .userName {
  position: relative;
  font-size: 38rpx;
  color: #fff;
}
.aboutUserMsgBox .aboutUserMsgTop .aboutUserMsgUserCover .aboutUserCoverRight .userName .bigVLogo {
  display: inline-block;
  width: 28rpx;
  height: 27rpx;
  margin-left: 6rpx;
}
.aboutUserMsgBox .aboutUserMsgTop .aboutUserMsgUserCover .aboutUserCoverRight .aboutLable {
  font-size: 22rpx;
  color: #fff;
}
.aboutUserMsgBox .aboutUserMsgTop .aboutUserMsgUserAddress {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 70rpx;
}
.aboutUserMsgBox .aboutUserMsgTop .aboutUserMsgUserAddress view {
  color: #fff;
  font-size: 24rpx;
}
.aboutUserMsgBox .aboutUserMsgTop .bigVBox {
  width: 100%;
  padding: 0 30rpx;
  height: 72rpx;
  position: absolute;
  top: 36rpx;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.aboutUserMsgBox .aboutUserMsgTop .bigVBox .addConnections {
  width: 166rpx;
  height: 72rpx;
  background-color: rgba(255, 255, 255, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}
.aboutUserMsgBox .aboutUserMsgTop .bigVBox .addConnections image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 8rpx;
}
.aboutUserMsgBox .aboutUserMsgTop .bigVBox .addConnections view {
  font-size: 36rpx;
  color: #fff;
}
.aboutUserMsgBox .UserMsgControlBox {
  z-index: 10;
  background-color: #fff;
  width: 691rpx;
  height: 194rpx;
  box-shadow: 0 0 10rpx #F3F1F1;
  transform: translateY(-85rpx);
  padding: 55rpx 75rpx 0 75rpx;
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
}
.aboutUserMsgBox .UserMsgControlBox .controlLeft,
.aboutUserMsgBox .UserMsgControlBox .controlRight {
  display: flex;
  align-items: center;
}
.aboutUserMsgBox .UserMsgControlBox .controlLeft image,
.aboutUserMsgBox .UserMsgControlBox .controlRight image {
  width: 78rpx;
  height: 78rpx;
}
.aboutUserMsgBox .UserMsgControlBox .controlLeft .aboutCollection,
.aboutUserMsgBox .UserMsgControlBox .controlRight .aboutCollection {
  margin-left: 37rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 8rpx;
}
.aboutUserMsgBox .UserMsgControlBox .controlLeft .aboutCollection :last-of-type,
.aboutUserMsgBox .UserMsgControlBox .controlRight .aboutCollection :last-of-type {
  color: #ccc;
}
.aboutOperationModelBox {
  z-index: 10;
  transform: translateY(-50rpx);
  width: 100%;
  padding: 0 30rpx;
}
.aboutOperationModelBox .aboutOperationModelShadow {
  width: 100%;
  box-shadow: 0 0 10rpx #F3F1F1;
}
.aboutOperationModelBox .aboutOperationModelShadow .operationModelItem {
  padding: 34rpx 30rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.aboutOperationModelBox .aboutOperationModelShadow .operationModelItem .operationModelLeft {
  flex: 1;
  display: flex;
  align-items: center;
}
.aboutOperationModelBox .aboutOperationModelShadow .operationModelItem .operationModelLeft image {
  width: 35rpx;
  height: 35rpx;
}
.aboutOperationModelBox .aboutOperationModelShadow .operationModelItem .operationModelLeft .operationTitle {
  margin-left: 20rpx;
}
.aboutOperationModelBox .aboutOperationModelShadow .operationModelItem .operationModelLeft .operationPrompt {
  font-size: 28rpx;
  color: #999;
}
.personalMsgTabBox {
  background-color: #fff;
  transform: translateY(-40rpx);
  padding: 0rpx 127rpx 30rpx 127rpx !important;
}
.personalMsgTabBox .borderStyle {
  justify-content: space-between;
}
.personalMsgTabBox .borderStyle .personalMsgTabItem {
  margin-right: 0;
  color: #bbb;
}
.personalMsgTabBox .borderStyle .personalMsgTabActive {
  color: #000;
}
.tabContentBox {
  background-color: #f5f5f5;
}
