.container {
  width: 100%;
}
.container .search {
  flex-grow: 1;
  margin: 0rpx 30rpx 30rpx 30rpx;
}
.container .swiperPaddingBox {
  width: 100%;
  padding: 0 30rpx;
}
.container .swiperPaddingBox swiper {
  width: 100%;
  height: 310rpx;
}
.container .swiperPaddingBox swiper .slide-image {
  width: 100%;
  height: 100%;
}
.productListBox {
  width: 100%;
  display: flex;
  flex-flow: wrap;
  padding-left: 40rpx;
  padding-top: 60rpx;
}
.productListBox .productItem {
  width: 197rpx;
  margin-right: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 25rpx;
}
.productListBox .productItem image {
  width: 136rpx;
  height: 94rpx;
  margin-bottom: 15rpx;
}
.productListBox .productItem view {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
  font-size: 22rpx;
}
